<h1>Search</h1>
<p></p>

<% flash.each do |key, value|%>
	<div class="flash <%= key %>"><%= value %></div>
<% end %>

		<%= form_tag books_search_path, :method => 'get' do%>
	
			<%= text_field_tag :search, params[:search], :placeholder => "Enter Title or Author of book to search", :class => 'txtsearch'%>
			<div class="btnSearch">
				<%= submit_tag 'Find Book Now', :id => 'btnFind'%>
			</div>	
		<% end %>
		
		
	<table border="1">
	<% @column_names.each do |column_name| %>
		<% if column_name != "id" && column_name != "created_at" && column_name != "updated_at"%>
			<td>
				<strong><%= column_name.capitalize %></strong>		
			</td>
		<% end %>
	<% end %>
		<td>
			<strong>Action</strong>
		</td>		
	<% @books.each do |book| %>
	
	
		<tr>
			<td><%= link_to book.title, borrow_path(book)%></td>
			<td><%= book.author%></td>
			<td><%= book.genre%></td>
			<td><%= book.no_of_items%></td>
			<td><%= link_to 'Edit', edit_book_path(book) %></td>		
		</tr>
	<%end%>	
	</table>
	
	<%= @msg %>
