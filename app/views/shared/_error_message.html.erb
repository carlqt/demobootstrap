<% if @books.errors.any? %>
	<div id = "error_explanation">
		<h2>
			<%= pluralize(@books.errors.count, "error")%>
			prohibited this user from being saved:
		</h2>
		<p>There were problems with the following fields:</p>
		<ul>	
			<% @books.errors.full_messages.each do |message|%>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
